{
  "openapi": "3.0.1",
  "info": {
    "title": "BizRules API",
    "version": "v1"
  },
  "paths": {
    "/api/Evaluation/calculation/{enterpriseCode}/{calculationCode}": {
      "post": {
        "tags": ["Evaluation"],
        "parameters": [
          {
            "name": "enterpriseCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "calculationCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/CalculationFromCodesRequest"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CalculationFromCodesRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CalculationFromCodesRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CalculationFromCodesRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PublicCalculationResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PublicCalculationResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PublicCalculationResult"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CalculationFromCodesRequest": {
        "type": "object",
        "properties": {
          "calculationParameters": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "additionalProperties": false
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PublicCalculationResult": {
        "type": "object",
        "properties": {
          "calculationDate": {
            "type": "string",
            "format": "date-time"
          },
          "outputParameters": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "additionalProperties": false
            },
            "nullable": true
          },
          "warnings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TemplateWarning"
            },
            "nullable": true
          },
          "terminationStatus": {
            "allOf": [
              {
                "$ref": "#/components/schemas/TerminationStatus"
              }
            ],
            "nullable": true
          },
          "errorStatus": {
            "allOf": [
              {
                "$ref": "#/components/schemas/ErrorStatus"
              }
            ],
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TemplateWarning": {
        "type": "object",
        "properties": {
          "elementID": {
            "type": "string",
            "format": "uuid"
          },
          "code": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TerminationStatus": {
        "type": "object",
        "properties": {
          "elementID": {
            "type": "string",
            "format": "uuid"
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ErrorStatus": {
        "type": "object",
        "properties": {
          "elementID": {
            "type": "string",
            "format": "uuid"
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": false
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {
          "type": "object",
          "additionalProperties": false
        }
      }
    }
  }
}
